<h1>Follower Users</h1>

  <% if @user.passive_follows.count != 0 %>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th corspan="5"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
            <td><%= user.name %></td>
            <td>フォロー数:<%= user.active_follows.count %></td>
            <td>フォロワー数:<%= user.passive_follows.count %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% else %>
    <p>ユーザーはいません</p>

  <% end %>