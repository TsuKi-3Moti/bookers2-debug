<table class='table'>
  <tr><%= image_tag user.get_profile_image, size: '100x100' %></tr>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to user_user_active_follows_path(user.id) do %>
        <%= user.active_follows.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user_user_passive_follows_path(user.id) do %>
        <%= user.passive_follows.count %>
      <% end %>
    </th>
  </tr>
</table>

<div class='row'>
<% if current_user != user %>
  <% if user.followed_by?(current_user) %>
    <div>
      <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class: "btn btn-success" %>
    </div>
  <% else %>
    <div>
      <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>
</div>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>